{
  "name": "u8g2-sim",
  "version": "1.0.0",
  "description": "A tiny simulator to speedup UI creation for Arduino.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "init:dist": "mkdirp dist",
    "init:css": "sass src/style.scss dist/bundle.css && cssmin dist/bundle.css > dist/bundle.min.css",
    "init:html:local": "cssmin src/index.html > dist/index.html",
    "init:fonts:dir": "mkdirp dist/fonts",
    "init:fonts:files": "cp -R node_modules/font-awesome/fonts/* dist/fonts/",
    "init": "npm-run-all init:**",
    "tsc": "tsc",
    "webpack:prod": "NODE_ENV=production webpack -p",
    "webpack:dev": "webpack-dev-server -w",
    "build": "npm-run-all clean init webpack:prod",
    "start": "npm-run-all clean init webpack:dev"
  },
  "author": "Paul Smith <code@uvwxy.de>",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/file-saver": "^2.0.1",
    "@types/react": "16.9.35",
    "@types/react-color": "^3.0.2",
    "@types/react-dom": "16.9.8",
    "@types/react-monaco-editor": "^0.16.0",
    "@types/toastr": "^2.1.38",
    "bdf-canvas": "^1.0.1",
    "bulma": "^0.8.2",
    "copy-webpack-plugin": "^6.0.2",
    "cpr": "^3.0.1",
    "css-loader": "^3.5.3",
    "cssmin": "^0.4.3",
    "file-saver": "^2.0.2",
    "font-awesome": "^4.7.0",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "hsl-to-hex": "^1.0.0",
    "mkdirp": "^1.0.4",
    "monaco-editor": "^0.20.0",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-bulma-components": "3.1.3",
    "react-canvas-draw": "^1.1.1",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-monaco-editor": "^0.36.0",
    "style-loader": "^1.2.1",
    "toastr": "^2.1.4",
    "ts-loader": "^7.0.5",
    "tslint": "^6.1.2",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}

{
    "name": "u8g2-sim",
    "version": "1.0.0",
    "description": "A tiny simulator to speedup UI creation for Arduino.",
    "scripts": {
        "clean": "rimraf dist",
        "init:dist": "mkdirp dist",
        "init:fonts:dir": "mkdirp dist/fonts",
        "init:fonts:files": "cp -R node_modules/font-awesome/fonts/* dist/fonts/",
        "init:bdf:files": "cd src && copy-newer -v ./bdf/**/* ../dist/",
        "init": "npm-run-all init:**",
        "build": "npm run-all clean && npm run init && parcel build ./src/index.html",
        "dev": "npm-run-all init && parcel serve ./src/index.html"
    },
    "author": "Paul Smith <code@uvwxy.de>",
    "license": "ISC",
    "dependencies": {
        "bdf-canvas": "^1.0.1",
        "bulma": "^0.9.3",
        "cpr": "^3.0.1",
        "file-saver": "^2.0.5",
        "font-awesome": "^4.7.0",
        "hsl-to-hex": "^1.0.0",
        "react": "^16.14.0",
        "react-bulma-components": "^4.0.7",
        "react-canvas-draw": "^1.2.1",
        "react-color": "^2.19.3",
        "react-dom": "^16.14.0",
        "react-monaco-editor": "^0.36.0",
        "toastr": "^2.1.4"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^6.3.0",
        "@parcel/transformer-inline-string": "^2.8.3",
        "@parcel/transformer-sass": "^2.8.3",
        "@types/file-saver": "^2.0.4",
        "@types/react": "16.9.35",
        "@types/react-color": "^3.0.6",
        "@types/react-dom": "16.9.8",
        "@types/react-monaco-editor": "^0.16.0",
        "@types/toastr": "^2.1.39",
        "copy-newer": "^2.1.2",
        "mkdirp": "^1.0.4",
        "monaco-editor": "^0.20.0",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.8.3",
        "prettier": "^2.8.4",
        "process": "^0.11.10",
        "rimraf": "^4.1.2",
        "typescript": "^4.9.5"
    }
}
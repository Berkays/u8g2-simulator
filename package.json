{
  "name": "u8g2-sim",
  "version": "1.0.0",
  "description": "A tiny simulator to speedup UI creation for Arduino.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "init:dist": "mkdirp dist",
    "init:css": "sass src/style.scss dist/bundle.css && cssmin dist/bundle.css > dist/bundle.min.css",
    "init:html:local": "cssmin src/index.html > dist/index.html",
    "init:fonts:dir": "mkdirp dist/fonts",
    "init:fonts:files": "cp -R node_modules/font-awesome/fonts/* dist/fonts/",
    "init": "npm-run-all init:**",
    "tsc": "tsc",
    "webpack:prod": "NODE_ENV=production webpack -p",
    "webpack:dev": "webpack-dev-server -w",
    "build": "npm-run-all clean init webpack:prod",
    "start": "npm-run-all clean init webpack:dev"
  },
  "author": "Paul Smith <code@uvwxy.de>",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/file-saver": "^1.3.0",
    "@types/react": "16.8.0",
    "@types/react-color": "^2.17.3",
    "@types/react-dom": "16.8.0",
    "@types/react-monaco-editor": "^0.10.1",
    "@types/toastr": "^2.1.35",
    "bdf-canvas": "^1.0.1",
    "bulma": "^0.8.0",
    "copy-webpack-plugin": "^5.1.1",
    "cpr": "^3.0.1",
    "cssmin": "^0.4.3",
    "file-saver": "^1.3.3",
    "font-awesome": "^4.7.0",
    "fork-ts-checker-webpack-plugin": "^0.4.0",
    "hsl-to-hex": "^1.0.0",
    "mkdirp": "^0.5.1",
    "monaco-editor": "^0.10.1",
    "npm-run-all": "^4.1.2",
    "raw-loader": "^3.1.0",
    "react": "^16.12.0",
    "react-bulma-components": "3.1.3",
    "react-canvas-draw": "^1.1.0",
    "react-color": "^2.18.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.19",
    "react-monaco-editor": "^0.13.0",
    "toastr": "^2.1.4",
    "ts-loader": "^4.0.1",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
